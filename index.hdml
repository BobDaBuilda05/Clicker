<!DOCTYPE html>
<html>
<head>
  <title>Clicker Game with Leaderboard</title>
  <style>
    body {
      text-align: center;
      font-family: Arial, sans-serif;
      background: #222;
      color: white;
    }
    #stats {
      display: flex;
      justify-content: center;
      gap: 30px;
      margin-top: 15px;
      font-size: 20px;
    }
    #score {
      font-size: 28px;
      margin-top: 10px;
    }
    #clickBtn {
      margin: 20px;
      padding: 50px 100px;
      font-size: 32px;
      cursor: pointer;
      border-radius: 15px;
      background: #1abc9c;
      color: white;
      border: none;
      transition: 0.2s;
    }
    #clickBtn:hover {
      background: #16a085;
      transform: scale(1.05);
    }
    .upgrade {
      background: #444;
      border: 2px solid #888;
      color: white;
      padding: 10px;
      margin: 8px;
      display: block;
      width: 340px;
      margin-left: auto;
      margin-right: auto;
    }
    .affordable {
      background: #2ecc71 !important;
      border-color: #27ae60 !important;
      color: black !important;
      font-weight: bold;
    }
    #prestigeBtn {
      background: gold;
      color: black;
      font-weight: bold;
      display: none;
      padding: 16px 30px;
      font-size: 20px;
      border-radius: 10px;
    }
    #leaderboard {
      margin-top: 30px;
      background: #111;
      border: 2px solid #555;
      padding: 15px;
      border-radius: 10px;
      width: 400px;
      margin-left: auto;
      margin-right: auto;
    }
    #leaderboard h2 {
      color: gold;
    }
    #leaderboard p {
      font-size: 18px;
    }
    button.resetBtn {
      background: red;
      color: white;
      border: none;
      padding: 10px 20px;
      margin-top: 10px;
      cursor: pointer;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <h1>‚ö° Clicker Game with Leaderboard ‚ö°</h1>

  <div id="score">Score: 0</div>

  <div id="stats">
    <div id="clickPowerStat">Click Power: 1</div>
    <div id="cpsStat">Auto Click/sec: 0</div>
    <div id="multiplierStat">Multiplier: x1</div>
    <div id="prestigeStat">Prestige Points: 0</div>
  </div>

  <button id="clickBtn" onclick="addPoint()">CLICK ME!</button>

  <h2>Upgrades</h2>
  <button id="upgrade1" class="upgrade" onclick="buyUpgrade('upgrade1')">+1 Click Power (Cost: 50)</button>
  <button id="upgrade2" class="upgrade" onclick="buyUpgrade('upgrade2')">+1 Auto Click/sec (Cost: 200)</button>
  <button id="upgrade3" class="upgrade" onclick="buyUpgrade('upgrade3')">+10/click (Cost: 1000)</button>

  <button id="prestigeBtn" onclick="prestige()">üèÜ Prestige</button>

  <!-- Leaderboard Section -->
  <div id="leaderboard">
    <h2>üèÜ Leaderboard</h2>
    <p id="bestScore">Best Score: 0</p>
    <p id="totalPrestige">Total Prestige Points: 0</p>
    <button class="resetBtn" onclick="resetLeaderboard()">Reset Leaderboard</button>
  </div>

  <script>
    let score = 0;
    let clickPower = 1;
    let autoClick = 0;
    let prestigePoints = 0;
    let multiplier = 1;

    const prestigeRequirement = 10000000;

    // Load leaderboard data from localStorage
    let bestScore = parseInt(localStorage.getItem("bestScore")) || 0;
    let totalPrestige = parseInt(localStorage.getItem("totalPrestige")) || 0;

    let upgrades = {
      upgrade1: { cost: 50, effect: () => clickPower += 1 },
      upgrade2: { cost: 200, effect: () => autoClick += 1 },
      upgrade3: { cost: 1000, effect: () => clickPower += 10 }
    };

    function addPoint() {
      score += clickPower * multiplier;
      updateStats();
    }

    setInterval(() => {
      score += autoClick * multiplier;
      updateStats();
    }, 1000);

    function updateStats() {
      document.getElementById("score").innerText = "Score: " + score.toLocaleString();
      document.getElementById("clickPowerStat").innerText = "Click Power: " + clickPower;
      document.getElementById("cpsStat").innerText = "Auto Click/sec: " + autoClick;
      document.getElementById("multiplierStat").innerText = "Multiplier: x" + multiplier.toFixed(1);
      document.getElementById("prestigeStat").innerText = "Prestige Points: " + prestigePoints;

      // Update leaderboard
      if(score > bestScore){
        bestScore = score;
        localStorage.setItem("bestScore", bestScore);
      }
      document.getElementById("bestScore").innerText = "Best Score: " + bestScore.toLocaleString();
      document.getElementById("totalPrestige").innerText = "Total Prestige Points: " + totalPrestige;

      // Show prestige button
      if(score >= prestigeRequirement){
        document.getElementById("prestigeBtn").style.display = "inline-block";
      }
    }

    function buyUpgrade(id){
      let u = upgrades[id];
      if(score >= u.cost){
        score -= u.cost;
        u.effect();
        u.cost = Math.floor(u.cost * 1.2);
        document.getElementById(id).innerText = document.getElementById(id).innerText.split("(Cost:")[0] + "(Cost: " + u.cost.toLocaleString() + ")";
        updateStats();
      }
    }

    function prestige(){
      let gained = Math.floor(score / prestigeRequirement);
      if(gained > 0){
        prestigePoints += gained;
        totalPrestige += gained;
        multiplier = 1 + prestigePoints * 0.5;
        localStorage.setItem("totalPrestige", totalPrestige);
      }
      score = 0;
      clickPower = 1;
      autoClick = 0;
      updateStats();
      document.getElementById("prestigeBtn").style.display = "none";
    }

    function resetLeaderboard(){
      if(confirm("Are you sure you want to reset the leaderboard?")){
        bestScore = 0;
        totalPrestige = 0;
        localStorage.setItem("bestScore", 0);
        localStorage.setItem("totalPrestige", 0);
        updateStats();
      }
    }

    updateStats();
  </script>
</body>
</html>
